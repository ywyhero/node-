<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>上传图片</title>
    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <div class="row">
            <form style="width: 40%" enctype="multipart/form-data" id="form">
                <div class="form-group">
                    <label for="exampleInputFile">图片上传</label>
                    <input type="file" id="exampleInputFile" name="upload">
                    <div style="font-size: 12px;margin-top: 5px">上传的图片不得大于2M</div>
                </div>
                <button type="button" class="btn btn-default">上传</button>
            </form>

        </div>
    </div>
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/js/jquery-3.2.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.form.js"></script>
</body>
<script>
    $('.btn').on('click', function() {
        $("#form").ajaxSubmit({
            url: '/api/upload',
            /*设置post提交到的页面*/
            type: "post",
            /*设置表单以post方法提交*/
            dataType: "json",
            /*设置返回值类型为文本*/
            success: function(data) {
                if (data.code === 1) {
                    window.location.href = '/pic'
                }
            },
            error: function(error) {
                alert(error);
            }
        });
    })
</script>

</html>